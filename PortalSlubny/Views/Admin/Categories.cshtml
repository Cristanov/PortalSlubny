@model IEnumerable<PortalSlubny.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_AdminMenu")

<div class="container-fluid white-section">
    <div class="container">
        <section>
            <div class="row">
                @*@Html.ActionLink("Create New", "Create")*@
                @using (Html.BeginForm("Categories", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.Label("Nazwa kategorii", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.Editor("newCategory", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("newCategory", new { @class = "text-danger" })
                        </div>
                        <input id="add-category-button" type="submit" class="btn btn-success" value="Dodaj" />
                    </div>
                }
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>Akcje</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edytuj", "CategoryEdit", new { id = item.Id }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                @Html.ActionLink("Usuń", "CategoryDelete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </section>
    </div>
</div>


